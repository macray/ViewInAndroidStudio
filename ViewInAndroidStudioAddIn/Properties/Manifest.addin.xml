<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Extension
        path="/MonoDevelop/Ide/Commands">
        <Command
            id="ViewInAndroidStudio.ViewInAndroidStudioCommands.ViewFile"
            _label="View in Android Studio"
            defaultHandler="ViewInAndroidStudio.ViewHandler" />
             <Command
            id="ViewInAndroidStudio.ViewInAndroidStudioCommands.RecreateProject"
            _label="(Re)create Android Studio project"
            defaultHandler="ViewInAndroidStudio.RecreateProjectHandler" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/GlobalOptionsDialog">
        <Section id="ViewInAndroidStudio" _label="Android Studio" />
    </Extension>
    <Extension path="/MonoDevelop/Ide/StartupHandlers">
        <Class id ="ViewInAndroidStudio.WorkspaceEventListener"/>
    </Extension>
    <Extension path = "/MonoDevelop/Ide/GlobalOptionsDialog/ViewInAndroidStudio">
        <Section id = "ViewInAndroidStudioGeneral" _label = "General" fill="true" class="ViewInAndroidStudio.GeneralOptions" />
    </Extension>
    <Extension
        path="/MonoDevelop/Ide/ContextMenu/ProjectPad">
        <CommandItem
            id="ViewInAndroidStudio.ViewInAndroidStudioCommands.ViewFile" />
        <CommandItem
            id="ViewInAndroidStudio.ViewInAndroidStudioCommands.RecreateProject" />
    </Extension>
</ExtensionModel>