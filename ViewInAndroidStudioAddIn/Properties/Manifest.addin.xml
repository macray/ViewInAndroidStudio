<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Extension
        path="/MonoDevelop/Ide/Commands">
        <Command
            id="Taiste.ViewInAndroidStudio.Commands.AddInCommands.ViewFile"
            _label="View in Android Studio"
            defaultHandler="Taiste.ViewInAndroidStudio.Commands.ViewHandler" />
        <Command
            id="Taiste.ViewInAndroidStudio.Commands.AddInCommands.RecreateProject"
            _label="(Re)create Android Studio project"
            defaultHandler="Taiste.ViewInAndroidStudio.Commands.RecreateProjectHandler" />
    </Extension>
    <Extension
        path="/MonoDevelop/Ide/GlobalOptionsDialog">
        <Section
            id="ViewInAndroidStudio"
            _label="Android Studio" />
    </Extension>
    <Extension
        path="/MonoDevelop/Ide/StartupHandlers">
        <Class
            id="Taiste.ViewInAndroidStudio.Commands.StartupHandler" />
    </Extension>
    <Extension
        path="/MonoDevelop/Ide/GlobalOptionsDialog/ViewInAndroidStudio">
        <Section
            id="ViewInAndroidStudioGeneral"
            _label="General"
            fill="true"
            class="Taiste.ViewInAndroidStudio.Preferences.GeneralOptions" />
    </Extension>
    <Extension
        path="/MonoDevelop/Ide/ContextMenu/ProjectPad">
        <CommandItem
            id="Taiste.ViewInAndroidStudio.Commands.AddInCommands.ViewFile" />
        <CommandItem
            id="Taiste.ViewInAndroidStudio.Commands.AddInCommands.RecreateProject" />
    </Extension>
</ExtensionModel>